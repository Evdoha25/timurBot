# QuickEnglishLevelBot Configuration
# Copy this file to .env and fill in your values

# Required: Main bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_main_bot_token_here

# Optional: Session timeout in minutes (default: 30)
SESSION_TIMEOUT_MINUTES=30

# Optional: Monitoring bot configuration
# Create a second bot via @BotFather for monitoring
MONITOR_BOT_TOKEN=your_monitor_bot_token_here

# The chat ID where results will be forwarded
# Get this by running the monitor bot and using /chatid command
MONITOR_CHAT_ID=your_chat_or_group_id_here
